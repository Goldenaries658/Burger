<h2>Burger List</h2>

<div class="list-group">
  {{#each burgers}}
    {{#unless devoured}}
      {{> burgers/burger-block devoured=false}}
    {{/unless}}
  {{/each}}
</div>

<h3>Unavailable</h3>

<div class="list-group">
  {{#each burgers}}
    {{#if devoured}}
      {{> burgers/burger-block devoured=true}}
    {{/if}}
  {{/each}}
</div>

<h3>Add burger</h3>
<form>
  <div>
    <label for="name">Burger Name:</label>
    <input type="text" id="name" name="name">
  </div>

  <button type="submit">Add Burger</button>
</form>